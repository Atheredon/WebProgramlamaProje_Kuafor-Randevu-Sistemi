<h1>@ViewBag.Customer.Name @ViewBag.Customer.Surname 'nun Randevu Geçmişi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tarih & Saat</th>
            <th>Servis</th>
            <th>Çalışan</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentDate.ToLocalTime()</td>
                <td>@appointment.Service.Name</td>
                <td>@appointment.Staff.Name @appointment.Staff.Surname</td>
                @if (appointment.Status == "Confirmed")
                {
                    <td>Onaylandı</td>
                }
                @if (appointment.Status == "Pending")
                {
                    <td>Beklemede</td>
                }
                @if (appointment.Status == "Cancelled")
                {
                    <td>İptal Edildi</td>
                }
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary mt-3" href="/Admin/Customers">Müşterilere Dön</a>
