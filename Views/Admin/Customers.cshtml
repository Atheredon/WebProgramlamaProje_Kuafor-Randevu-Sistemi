<h1>Customers</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name @customer.Surname</td>
                <td>@customer.Email</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Admin/CustomerDetails?customerId=@customer.Id">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
