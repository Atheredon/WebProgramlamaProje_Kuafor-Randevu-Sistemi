@model KuaförRandevuSistemi.Models.Service

<div class="container mt-5">
    <h1 class="mb-4">Yeni Servis Ekle</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post" action="/Admin/AddService">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- Service Name -->
        <div class="mb-3">
            <label for="Name" class="form-label">İsim</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required maxlength="100" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label for="Description" class="form-label">Açıklama</label>
            <textarea class="form-control" id="Description" name="Description" rows="3" maxlength="500">@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Duration -->
        <div class="mb-3">
            <label for="Duration" class="form-label">Süre (dakika cinsinden)</label>
            <input type="number" class="form-control" id="Duration" name="Duration" value="@Model.Duration" min="5" max="240" required />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div class="mb-3">
            <label for="Price" class="form-label">Fiyat</label>
            <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" min="0" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Servis Ekle</button>
    </form>
</div>
