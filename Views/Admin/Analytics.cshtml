                <p class="card-text">@ViewBag.MonthlyRevenue ₺</p>
            </div>
        </div>
    </div>
</div>

<!-- Popular Services -->
<h2>Popular Services</h2>
<h3>Total</h3>
@if (ViewBag.popularServices != null && ((IEnumerable<dynamic>)ViewBag.popularServices).Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Service</th>
                <th>Bookings</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in ViewBag.popularServices)
            {
                <tr>
                    <td>@service.ServiceName</td>
                    <td>@service.Bookings</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data available for popular services.</p>
}


