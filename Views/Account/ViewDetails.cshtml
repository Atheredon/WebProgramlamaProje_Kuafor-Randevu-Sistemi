@model KuaförRandevuSistemi.Models.User

<div class="container mt-4">
    <h1 class="mb-4">Account Details</h1>
    <table class="table table-striped">
        <tr>
            <th>Name:</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Surname:</th>
            <td>@Model.Surname</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Role:</th>
            <td>@Model.Role</td>
        </tr>
    </table>

    <a href="/" class="btn btn-primary">Back to Home</a>
</div>