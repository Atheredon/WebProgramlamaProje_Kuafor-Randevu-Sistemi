<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <!-- Home Link -->
                <a class="navbar-brand" href="/">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">

                    <!-- Left-aligned links -->
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Services">Services</a>
                        </li>
                        @if (ViewData["UserRole"]?.ToString() == "Customer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Appointments/Book">Make Appointment</a>
                            </li>
                        }
                        @if (ViewData["UserRole"]?.ToString() == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Dashboard">Admin Panel</a>
                            </li>
                        }
                    </ul>

                    <!-- Right-aligned links -->
                    <ul class="navbar-nav">
                        @if (ViewData["UserId"] != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle btn btn-secondary text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @ViewData["UserName"]
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/Account/ViewDetails">View Account Details</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="/Account/Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white me-2" href="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-secondary text-white" href="/Account/SignUp">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="container mt-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="container text-center mt-5">
        <p>&copy; 2024 Hair Salon. All Rights Reserved.</p>
    </footer>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
