@model List<KuaförRandevuSistemi.Models.Service>

<h1>Our Services</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@service.Name</h5>
                        <p class="card-text">@service.Description</p>
                        <p class="card-text"><strong>Duration:</strong> @service.Duration minutes</p>
                        <p class="card-text"><strong>Price:</strong> @service.Price ₺</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No services are available at the moment.</p>
}
